{
  "expo": {
    "name": "Green Guardian",
    "slug": "green_guardian",
    "scheme": "greenguardian",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/icon.png",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#EAF6EF"
    },

    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourname.greenguardian",
      "infoPlist": {
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent"
      }
    },

    "android": {
      "package": "com.yourname.greenguardian",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#EAF6EF"
      }
    },

    "plugins": [],
    "updates": { "fallbackToCacheTimeout": 0 },
    "assetBundlePatterns": ["**/*"]
  }
}
